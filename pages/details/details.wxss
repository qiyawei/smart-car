page {
    font-size: 30rpx;
    background-color: #181B20;
    color: #fff;
}

.top_tip {
    background: #FF5722;
    height: 35px;
    text-align: center;
    line-height: 35px;
    color: #fff;
}

.header {
    display: flex;
}

.shop_img {
    width: 30%;
    padding: 20px;
    padding-bottom: 10px;
    padding-right: 5px;
}

.shop_img image {
    width: 208rpx;
    height: 208rpx;
}

.shop_text {
    width: 65%;
    padding-top: 20px;
    line-height: 30px;
    font-size: 45rpx;
    color: #999A9C;
}

.shop_add {
    font-size: 28rpx;
    line-height: 45rpx;
}

.icon {
    width: 15px;
    height: 15px;
    vertical-align: sub;
}

.icon_test {
    padding: 0 5px;
    font-size: 10px;
}

.iocn_right {
    padding-left: 10px;
}

.bq {
    display: flex;
    flex-wrap: wrap;
    color: #77787C;
}

.bq_con {
    padding: 2px 10px;
    box-sizing: border-box;
    border-radius: 20px;
    font-size: 11px;
    border: 1px solid #727377;
    margin: 10px 0px 10px 20px;
}

.fw_xm {
    padding-left: 20px;
    color: #727377;
    font-size: 12px;
}

.bt {
    display: flex;
    padding: 20px 0;
    align-items: center;
    text-align: center;
    border-bottom: 1px solid #2e2e2e;
    width: calc(100% - 40px);
    margin: 0 auto;
}

.paidui {
    width: 50%;
}

.paidui_bt {
    padding: 10px;
    border-radius: 30px;
    border: 1px solid #24AA8B;
    color: #1EEEB5;
    font-weight: 900;
    margin-right: 10px;
}

.map_bt {
    padding: 10px;
    border-radius: 30px;
    background: #1EEEB5;
    color: #000;
    margin-left: 10px;
}

.map {
    width: 50%;
}

.zy {
    text-align: center;
    color: #999A9C;
    padding-top: 10px;
    padding-bottom: 10px;
    border-bottom: 1px solid #2e2e2e;
    margin: 0 20px;
}

.zy_img {
    width: 100%;
    margin-top: 10px;
}

.footer {
    text-align: center;
    padding: 10px;
    padding-bottom: 20px;
}

.footer_con {
    padding: 10px 20px 20px 20px;
    color: #707175;
}

.lineup {
    width: 90%;
    background: #181B20;
    position: fixed;
    top: 50px;
    left: 5%;
}

.detalis_img {
    width: 100%;
}

.lineup_img {
    position: relative;
}

.lineup_footer {
    color: #fff;
    margin: 10px 20px;
    padding-bottom: 10px;
    border-bottom: 1px solid #272a2f;
}

.shop_name {
    margin-bottom: 18rpx;
}

.bq2 {
    display: flex;
}

.bq2_con {
    padding: 2px 10px;
    box-sizing: border-box;
    font-size: 11px;
    border-radius: 20px;
    border: 1px solid #999;
    color: #999;
    margin: 10px 10px 10px 0;
}

.tip {
    color: #999;
    margin: 20px;
    font-size: 12px;
}

.zzz {
    position: fixed;
    height: 100%;
    width: 100%;
    background: #000;
    top: 0;
    left: 0;
    opacity: 0.88;
}

.close {
    position: absolute;
    right: -10px;
    top: -15px;
}

.close_img {
    width: 30px;
    height: 30px;
}

.left_sj {
    text-align: left;
    text-indent: 30px;
    font-size: 13px;
}